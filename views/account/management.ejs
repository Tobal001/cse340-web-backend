        <h1>Account Management</h1>

        <% if (locals.notice) { %>
            <div class="flash-message">
                <p><%= notice %></p>
            </div>
        <% } %>

        <% if (errors && errors.length > 0) { %>
            <div class="error-messages">
                <ul>
                    <% errors.forEach(error => { %>
                        <li><%= error.msg %></li>
                    <% }) %>
                </ul>
            </div>
        <% } %>

        <p>You're logged in</p>
